<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:elevation="6dp"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imagenPlaya"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/startphoto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombrePlaya"
            android:layout_below="@id/imagenPlaya"
            android:text="Playa de lo que sea"
            android:ellipsize="end"
            android:textSize="15dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ubicacionPlaya"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txtNombrePlaya"
            android:text="Calle de la playa"
            android:ellipsize="end"
            android:textSize="15dp"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptPlaya"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/ubicacionPlaya"
            android:text="Playa con arena"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPuntuar"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/descriptPlaya"
            android:text="Puntua la experiencia en esta playa:"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/puntosPlaya"
            android:layout_below="@id/txtPuntuar"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>