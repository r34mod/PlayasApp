<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="260dp"
    android:layout_width="match_parent"
    android:elevation="8dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/imgTodo"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/startphoto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgTodo"
            android:id="@+id/txtNombreTodo"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:text="Playa y piscina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNombreTodo"
            android:id="@+id/descriptTodo"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:text="descripcion de playas y piscinas"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptTodo"
            android:id="@+id/ubicacionTodo"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:text="En un lugar"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ubicacionTodo"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/puntosTodo"
            android:text="5 puntos"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>